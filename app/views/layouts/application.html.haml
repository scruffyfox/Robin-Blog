%html
	%meta{:charset => "utf-8"}
	%meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
	%meta{"http-equiv" => "cleartype", :content => "on"}
	%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
	%head		
		%title 			
			- if params[:first_id] == nil
				Robin Blog
			- else
				#{@post.title} - Robin Blog
			
		%link{:href=>"http://roboto-webfont.googlecode.com/svn/trunk/roboto.all.css", :rel=>"stylesheet", :type=>"text/css"}
		= stylesheet_link_tag "application", "style", "bigvideo"
		= javascript_include_tag "application", "modernizr-2.5.3.min"
		%link{:rel=>"alternate", :type=>"application/rss+xml", :href=>"http://blog.robinapp.net/rss", :title=>"RSS Feed"}
		
		%body
			.site
				%header{"role" => "banner"}
					.container
						.logo
							%a{:href => "/"}
								%img{:src => "assets/logo2.png"}
						.play_button
							%nav
								%ul
									.small_block
										%li
											%a{:href => "http://robinapp.net/"}
												Home
										/ %li
										/ 	%a{:href => "#"}
										/ 		Buy app
									.small_block
										/ %li
										/ 	%a{:class => "buy_link", :href => "#"}
										/ 		%img{:src => "assets/buy_direct.png"}
										%li
											%a{:class => "play_link", :href => "http://rbn.im/store"}
												%img{:src => "assets/play_badge.png"}
				.main
					.container
						%aside{:class => "archive"}
							%h3 Recent Posts
							%ul
								- @posts.each do |column, value|
									%li 
										%a{:href => "/" + column.url}
											= column.title
						
						%section{:class => "post"}
							= yield

				%footer{"role" => "contentinfo"}
					%div{:class => "container"}
						.logo
							%a{:href => "/"}
								%img{:src => "assets/logo2.png"}
						
						%p
							Made with love by 
							%a{:href => "http://alpha.app.net/scruffyfox"}
								%img{:src => "https://d2rfichhc2fb9n.cloudfront.net/image/5/N8p78ZgCNlBnSpOmqF1r0pcBq297InMiOiJzMyIsImIiOiJhZG4tdXNlci1hc3NldHMiLCJrIjoiYXNzZXRzL3VzZXIvNjIvZDYvNDAvNjJkNjQwMDAwMDAwMDAwMC5qcGciLCJvIjoiIn0?h=80&w=80"}
							and 
							%a{:href => "http://alpha.app.net/simpleine"}
								%img{:src => "https://d2rfichhc2fb9n.cloudfront.net/image/5/njh0EyDR-8iXWrRruJo7g7Bx9Ql7InMiOiJzMyIsImIiOiJhZG4tdXNlci1hc3NldHMiLCJrIjoiYXNzZXRzL3VzZXIvNWYvMjgvMDAvNWYyODAwMDAwMDAwMDAwMC5qcGciLCJvIjoiIn0?h=114&w=114"}
							Read the
							%a{:href => "http://blog.robinapp.net"}
								blog
							and follow
							%a{:href => "http://alpha.app.net/robinapp"}
								@robinapp
							for updates.

